{
  "name": "svelte-reveal",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean": "turbo run clean && rm -rf node_modules && rm -rf package-lock.json",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "turbo run format",
    "format:staged": "turbo run format:staged",
    "lint": "turbo run lint",
    "postinstall": "husky install",
    "pack": "turbo pack"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@7.5.3"
}

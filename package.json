{
  "name": "svelte-reveal-monorepo",
  "private": true,
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "pack": "turbo run pack",
    "format": "prettier . --write",
    "format:staged": "pretty-quick --staged",
    "lint": "turbo run lint",
    "prepare": "husky",
    "clean": "turbo run clean",
    "postclean": "rm -rf .turbo && rm -rf node_modules && rm -f package-lock.json"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "pretty-quick": "^4.0.0",
    "turbo": "^1.13.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "npm@7.5.3"
}
